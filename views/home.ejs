<%- include('partials/header') -%>

<h1>Home</h1>
<p><%= homeStartingContent %></p>

<%  posts.forEach((post)=>{ %>
        <h1><%= post.title %></h1>
         <% if(post.body.length > 100){ %>
        <p><%= post.body.slice(0,100) + " ... " ; %><a href="/posts/<%= post._id %>">Read more</a></p>
        <% }  else { %>
        <p> <%= post.body %> <a href="/posts/<%= post._id %>"> full Page </a></p>
        
        <% } %> 
<%  }); %>

<%- include('partials/footer') -%>